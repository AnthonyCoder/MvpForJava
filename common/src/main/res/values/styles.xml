<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black_61</item>
    </style>

    <declare-styleable name="BadgeRadioButton">
        <attr name="badgeTextColor" format="color|reference" />
        <attr name="badgeTextSize" format="dimension|reference" />
        <attr name="badgeBackground" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ZoomScrollView">
        <attr name="zoomTarget" format="integer|reference" />
        <attr name="zoomMax" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="horizontalMargin" format="dimension|reference" />
        <attr name="verticalMargin" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="GridViewPager">
        <attr name="itemLayoutId" format="integer|reference" />
        <attr name="columnSize" format="integer|reference" />
        <attr name="rowSize" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="radius" format="dimension" />
        <attr name="distance" format="dimension" />
        <attr name="normalColor" format="color" />
        <attr name="selectedColor" format="color" />
    </declare-styleable>
    <declare-styleable name="ItemView">
        <attr name="leftIcon" format="integer|reference" />
        <attr name="rightIcon" format="reference|integer" />
        <attr name="itemTitle" format="string|reference" />
        <attr name="itemBackgroundColor" format="color|reference" />
        <attr name="dividerVisible" format="boolean" />
        <attr name="dividerLeftMargin" format="dimension" />
        <attr name="dividerRightMargin" format="dimension" />

    </declare-styleable>

</resources>
